<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="270dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingBottom="77dp"
    android:paddingTop="21dp" >

    <LinearLayout
        android:id="@+id/channel_lay"
        android:layout_width="240dip"
        android:layout_height="172dip"
        android:background="@drawable/tv_playback_tvlogo_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/channel_icon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="21dp" />

        <TextView
            android:id="@+id/channel_name"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:singleLine="false"
            android:textColor="@color/tui_text_color_white"
            android:textSize="@dimen/tui_text_size_2" />
    </LinearLayout>

</LinearLayout>